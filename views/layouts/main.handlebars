<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Animal Shelter</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <div class="main-layout">
      <header class="shelter-banner">
        <h1>
          Shelter
        </h1>
        <nav class="page-links">
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
          <a href="/">Home</a>
          <a href="/available_dogs">Animals Available</a>
          <a href="/application">Adoption</a>
          <a href="/volunteers">Volunteer</a>
          <a href="/sponsors">Sponsors</a>
          <a href="/" id="logout">Logout</a>
        {{else}}
          <a href="/">Home</a>
          <a href="/available_dogs">Animals Available</a>
          <a href="/application">Adoption</a>
          <a href="/volunteers">Volunteer</a>
          <a href="/sponsors">Sponsors</a>
          <a href="/login">Login</a>
        {{/if}}
      </nav>
      </header>
      <main class="container_main">
        {{{body}}}
      </main>
    </div>

      <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
  </body>

</html>