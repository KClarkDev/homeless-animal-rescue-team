<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Animal Shelter</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <div class="main-layout">
      <header class="shelter-banner">
        <h1>
          Shelter
        </h1>
        <nav class="page-links">
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
          <a href="/">Home</a>
          <a href="/available_dogs">Animals Available</a>
          <a href="/application">Adoption</a>
          <a href="/volunteers">Volunteer</a>
          <a href="/sponsors">Sponsors</a>
          <a href="/" id="logout">Logout</a>
        {{else}}
          <a href="/">Home</a>
          <a href="/available_dogs">Animals Available</a>
          <a href="/application">Adoption</a>
          <a href="/volunteers">Volunteer</a>
          <a href="/sponsors">Sponsors</a>
          <a href="/login">Login</a>
        {{/if}}
      </nav>
      </header>
      <main class="container_main">
        {{{body}}}
      </main>
    </div>

      <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
  </body>

</html>